{
	"name": "repro-turborepo-coverage-badges-action",
	"devDependencies": {
		"@biomejs/biome": "2.3.4",
		"turbo": "2.6.0",
		"typescript": "5.9.3"
	},
	"engines": {
		"node": ">=22"
	},
	"packageManager": "bun@1.3.2",
	"private": true,
	"scripts": {
		"update-deps": "bunx npm-check-updates --root --format group -i",
		"type-check": "turbo run type-check",
		"build": "turbo run build",
		"dev": "turbo run dev",
		"check": "biome check .",
		"check-fix": "biome check --write .",
		"format": "biome format .",
		"format-fix": "biome format --write .",
		"lint": "biome lint .",
		"lint-fix": "biome lint --write .",
		"run-action": "act -P ubuntu-latest=-self-hosted --job coverage-badges-generation"
	},
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
